		"drizzle-dbml-generator": "^0.10.0",
		"drizzle-kit": "^0.31.1",
		"drizzle-orm": "^0.43.1",
		"eslint": "^9.20.1",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"flowbite": "^3.1.2",
		"flowbite-svelte": "^1.7.1",
		"globals": "^15.15.0",
